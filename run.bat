@ECHO OFF
CLS
SET SEC=0
SET MIN=0
SET HOUR=0
:TOP
CLS
ECHO %HOUR%:%MIN%:%SEC%
TIMEOUT /T 1 /NOBREAK>NUL
IF %SEC%==59 (
GOTO MINUTE
) ELSE (
SET /A SEC=%SEC% + 1
GOTO TOP
)
:MINUTE
SET SEC=0
IF %MIN%==59 (
GOTO HOUR
) ELSE (
SET /A MIN=%MIN% + 1
GOTO TOP
)
:HOUR
SET SEC=0
SET MIN=0
SET /A HOUR=%HOUR% + 1
GOTO TOP
